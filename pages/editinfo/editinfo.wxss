.icon-arrow-right-copy-copy:before {
  content: "\e603";
}

.editinfo_body{
  /* background: rgb(248, 248, 248); */
  padding: 12px;
}
.editinfo_head{
  position: relative;
  width: 100%;
  height: 126px;
  /* padding: 12px; */
  box-sizing: border-box;
  border-radius: 10px;
  box-shadow: 0 4px 8px #f3ca8e;
  margin-bottom: 20px;
}
.headerbg{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.headerinfo{
  width: 100%;
  height: 100%;
  /* background: #fff; */
  position: absolute;
  top: 0;
  padding: 12px;
  box-sizing: border-box;
}
.headerinfo_top {
  display: flex;
  margin-bottom: 18px;
}
.headerinfo_top image{
  width: 62px;
  height: 62px;
  border-radius: 50%;
  border: 2px solid #fff;
  margin-right: 18px;
}
.headerinfo_top text{
  font-size: 20px;
  color: #fff;
  line-height: 66px;
}
.yinsi{
  font-size: 14px;
  color: #fff;
}
.editinfo_list_li{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 44px;
  border-bottom: 2px solid #fafafa;
  border-radius: 5px;
  line-height: 44px;
  box-shadow: 0 4px 8px #ededed;
  padding: 0 12px;
  box-sizing: border-box;
  margin-bottom: 12px;
}
.editinfo_list_li_title{
  font-size: 14px;
  color: #2e2c3a;
  font-weight: 600;
}
.editinfo_list_li_right{
  display: flex;
}
.editinfo_list_li_right image{
  width: 34px;
  height: 34px;
  border-radius: 50%;
}
.editinfo_list_li_right .iconfont{
  font-size: 14px;
  color: #9d9d9d;
  margin-left: 8px;
}
.editinfo_list_li_right text{
  font-size: 14px;
  color: #9d9d9d;
}
.bio{
  max-width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}