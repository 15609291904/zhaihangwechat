.discover_box{
  padding: 12px;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.discover_list{
  width: 351px;
  height: 114px;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 1px 1.732px 10px 0px rgba(186,186,186,0.33);
  margin: 10px auto;
  border-radius: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.discover_list_left {
  overflow: hidden;
  width: 230px;
  padding-left: 12px;
  box-sizing: border-box;
}
.discover_list_title{
  font-size: 18px;
  font-weight: 700;
  color: rgba(43,43,43,1);
  line-height: 18px;
  letter-spacing: 0px;
  margin: 14px 0 0 0;
  display: block;
  width: 230px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.discover_list_con{
  color: #2B2B2B;
  opacity: .6;
  font-size: 12px;
  /* line-height: 12px; */
}
.discover_list_time{
  display: flex;
  flex-direction: row;
}
.discover_list_time image{
  width: 10px;
  height: 10px;
  margin: 14px 4px 0 0;
}
.discover_list_time  text{
  font-size: 9px;
  color: #2B2B2B;
  opacity: .3;
  margin-top: 12px;
}
.discover_list_right image{
  width: 97px;
  height: 89px;
  margin: 12px 13px 0 0;
}