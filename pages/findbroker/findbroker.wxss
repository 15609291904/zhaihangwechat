.findbroker_body{
  display: flex;
  flex-direction: column;
  background: #fff;
}
.findbroker_header{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 29px;
  justify-content: space-around;
  font-size: 14px;
  color: #2B2B2B;
  /* opacity: 0.3; */
  line-height: 29px;
}
.findbroker_header .activetext{
  color: #f4af2b;
  border-bottom: 2px solid #ef9d00;
  box-sizing: border-box;
  opacity: 1;
}
.findbroker_price{
  display: flex;
  flex-direction: row;
}
.price_body{
  padding: 0 12px;
}
.priceBox{
  width: 100%;
  background: #fff;
  box-shadow: 0 4px 6px #959595;
  padding-bottom: 20px;
  border-radius: 6px;
}
.priceBoxUl text{
  display: block;
  text-align: center;
  font-size: 12px;
  line-height: 35px;
  color: #2B2B2B;
}
.sure{
  width: 198px;
  height: 36px;
  line-height: 36px;
  border-radius: 18px;
  color: #fff;
  text-align: center;
  background: #F6A802;
  box-shadow: 2.5px 4.33px 10px 0px rgba(227,130,4,0.5);
  margin: 0 auto;
}
.findbroker{
  padding: 12px;
  background: #fff;
}
.findbroker_box{
  height: 93px;
  width: 100%;
  background: rgba(255,255,255,1);
  box-shadow: 1px 1.732px 10px 0px rgba(186,186,186,0.33);
  border-radius: 5px;
  margin-bottom: 12px;
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.broker_head{
  width: 20%;
}
.broker_head image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.broker_info{
  /* margin-left: 10px; */
  display: flex;
  flex-direction: column;
  width: 60%;
  padding-left: 10px;
  box-sizing: border-box;
}
.broker_info_1{
  display: flex;
  flex-direction: row;
  margin-bottom: 8px;
}
.broker_info_name{
  font-size: 16px;
  color: #2B2B2B;
}
.broker_info .mingpian{
  margin: 0 8px;
  font-size: 20px;
  color: #f8a501;
}
.broker_info_score{
  font-size: 15px;
  color: #F6A802;
}
.broker_info_price{
  text-align: center;
  width: 30%;
}
.broker_price{
  font-size: 18px;
  color: #F6A802;
}
.broker_price .price_num{
  font-size: 30px;
}
.broker_price_title{
  font-size: 11px;
  color: #2B2B2B;
  opacity: .6;
}
.bio{
  color: #959595;
  font-size: 12px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}