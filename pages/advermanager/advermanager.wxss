.icon-mingpian:before {
  content: "\e753";
}


.advermanager_body{
  padding: 12px;
}
.advermanager_btn{
  width: 100%;
  height: 150px;
  border-radius: 6px;
  box-shadow: 0 4px 6px #e2e1e1;
  font-size: 20px;
  color: #f99600;
  line-height: 150px;
  text-align: center;
}

.advert_card{
  width: 100%;
  /* height: 138px; */
  margin-bottom: 20px;
  padding: 16px;
  box-sizing: border-box;
  border-radius: 6px;
  box-shadow: 0 4px 6px #e2e1e1;
  display: flex;
  align-items:center;
  flex-direction: column;
  /* justify-content: space-around; */
}
.broker_info{
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.broker_info_left image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.broker_info_center{
  margin: 0 10px;
  width: 166px;
}
.broker_info_centerv1{
  display: flex;
  margin-bottom: 4px;
}
.broker_info_centerv1_name{
  font-size: 16px;
  line-height: 22px;
  color: #4c4c4c;
}
.broker_info_centerv1 .iconfont{
  font-size: 20px;
  color: #f8a501;
  line-height: 22px;
  margin: 0 8px;
}
.score{
  font-size: 14px;
  color: #f8a501;
  line-height: 22px;
}
.broker_info_skill{
  display: flex;
  margin-bottom: 4px;
}
.skill_title{
  padding: 0 6px;
  line-height: 14px;
  font-size: 12px;
  color: #f9cf87;
  border: 2px solid #fce6b7;
  border-radius: 20px;
  margin: 0 4px 4px 0;
  text-align: center;
}
.broker_info_intro{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  color: #959595;
}
.broker_info_right{

}
.broker_info_right_price{
  font-size: 14px;
  color: #f59500;
}
.broker_info_right_price text{
  font-size: 22px;
}
.price_title{
  color: #909090;
  font-size: 12px;
  line-height: 20px;
}
.advert_btnbox{
  display: flex;
  justify-content: flex-end;
  width: 100%;
}
.advert_btn{
  padding: 0 12px;
  margin: 10px 0 0 10px;
  border: 1px solid #f99600;
  color: #f99600;
  font-size: 12px;
  line-height: 26px;
  border-radius: 15px;
}
.advert_btnbox .advert_btn2{
  color: #b5b5b5;
  border: 1px solid #b5b5b5;
}