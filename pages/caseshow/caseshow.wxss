/* pages/caseshow/caseshow.wxss */
.caseshow_body{
  padding: 12px;
  display: flex;
  flex-direction: column;
}
.caseshow_box{
  width: 100%;
  height: 95px;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 1px 1.732px 10px 0px rgba(186,186,186,0.33);
  border-radius: 5px;
  margin-bottom: 12px;
}
.caseshow_top{
  display: flex;
  flex-direction: row;
}
.caseshow_top_type,.caseshow_top_id{
  font-size: 12px;
  color: #2B2B2B;
  opacity: .8;
}
.caseshow_top_type{
  margin: 8px 6px 8px 12px;
}
.caseshow_top_id{
  margin: 8px 10px 0 0;
}
.caseshow_top_pro{
  /* width: 49px; */
  height: 14px;
  border: 1px solid #F7A400;
  font-size: 9px;
  color: #F6A802;
  opacity: .6;
  text-align: center;
  line-height: 14px;
  border-radius: 10px;
  margin: 8px 0 0 0;
  padding: 0 5px;
}
.caseshow_middle{
  display: flex;
  flex-direction: row;
}
.caseshow_middle_box{
  width: 117px;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.capital{
  font-size: 25px;
  color: #F6A802;
}
.caseshow_text_title{
  font-size: 12px;
  color: #2B2B2B;
  font-weight: 600;
}
.caseshow_line{
  width: 1px;
  height: 25px;
  background: #979797;
  opacity: .1;
  margin-top: 14px;
}
.interest{
  font-size: 30px;
  color: #F6A802;
  line-height: 33px;
}
.caseshow_time{
  font-size: 30px;
  color: #F6A802;
  line-height: 26px;
}
.caseshow_time text{
  font-size: 15px;
}