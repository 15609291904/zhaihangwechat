.body{
  position: relative;
}
.brokerdetail_body{
  padding: 0 12px 50px;
}
.broker_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.broker_head{
  width: 20%;
}
.broker_head image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.broker_info_box{
  /* margin-left: 10px; */
  display: flex;
  flex-direction: column;
  width: 60%;
  padding-left: 10px;
  box-sizing: border-box;
}
.broker_info_1{
  display: flex;
  flex-direction: row;
  margin-bottom: 8px;
}
.broker_info_name{
  font-size: 16px;
  color: #2B2B2B;
}
.broker_info_box .mingpian{
  margin: 0 8px;
  font-size: 20px;
  color: #f8a501;
}
.broker_info_score{
  font-size: 15px;
  color: #F6A802;
}
.broker_info_price{
  text-align: center;
  width: 30%;
}
.broker_price{
  font-size: 18px;
  color: #F6A802;
}
.broker_price .price_num{
  font-size: 30px;
}
.broker_price_title{
  font-size: 11px;
  color: #2B2B2B;
  opacity: .6;
}
.bio{
  color: #959595;
  font-size: 12px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.createTitle{
  font-size: 18px;
  line-height: 50px;
  font-weight: 600;
  color: #020202;
}
.messcard{
  box-shadow: 0 4px 6px #e2e1e1;
  padding: 16px;
  box-sizing: border-box;
  border-radius: 6px;
}
.messcard_bio{
  font-size: 16px;
  color: #6f6f6f;
}
.history{
  display: flex;
  justify-content: space-between;
}
.history_title{
  font-size: 18px;
  line-height: 50px;
  font-weight: 600;
  color: #020202;
}
.more{
  font-size: 12px;
  color: #737373;
  line-height: 50px;
}
.messcard2{
  margin-bottom: 20px;
}
.perloan{
  display: flex;
  justify-content: space-between;
}
.perloan_left{
  font-size: 14px;
  color: #464646;
  font-weight: 600;
}
.perloan_right{
  display: flex;
  flex-direction: row;
}
.perloan_right_title{
  padding: 0 6px;
  border-radius: 20px;
  border: 2px solid #fce6b7;
  color: #fce6b7;
  font-size: 12px;
  height:15px;
  line-height: 14px;
}
.borrow_cycle{
  font-size: 12px;
  color: #f6b759;
  margin-left: 5px;
}
.borrow_cycle text{
  display: block;
}
.loan_total{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.loan_total_view {
  text-align: center;  
}
.loan_total_view view{
  color: #faa600;
  font-size: 20px;
  font-weight: 600;
  /* margin-bottom: 8px; */
  line-height: 22px;
}
.loan_total_view text{
  font-size: 12px;
  color: #222222;
}
.loan_total_view2 view{
  font-size: 22px;
}
.buttonbox button{
  padding: 0 15px;
  height: 30px;
  border-radius: 20px;
  background: #f6a802;
  color: #fff;
  line-height: 29px;
  font-size: 14px;
  text-align: center;
  border: 0;
  outline: none;
}
.bottomsend{
  width: 100%;
  height: 50px;
  background: #f7a803;
  color: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  line-height: 49px;
  text-align: center;
  font-size: 18px;
  position: fixed;
  bottom: 0;
}