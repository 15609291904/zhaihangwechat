/* pages/claimabout/claimabout.wxss */
.claimabout_body{
  padding: 0 12px;
  height: 100%;
}
.header{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.myclaims_head{
  line-height: 28px;
  font-size: 14px;
  color: #c2c2c2;
}
.header .active_head{
  color: #f4af2b;
  border-bottom: 2px solid #ef9d00; 
}
.noclaims{
  text-align: center;
}
.item_box{
  box-shadow: 0 4px 6px #e2e1e1;
  border-radius: 6px;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.perloan{
  display: flex;
  justify-content: space-between;
  line-height: 20px;
}
.perloan_left{
  font-size: 14px;
  color: #464646;
  font-weight: 600;
  margin-bottom: 12px;
}
.perloan_right{
  display: block; 
  padding: 0 6px;
  border: 2px solid #fce6b7;
  border-radius: 20px;
  font-size: 12px;
  color: #f9cf87 ;
  height: 20px;
  box-sizing: border-box;
  line-height: 15px;
  margin-bottom: 12px;
}
.loan_total{
  display: flex;
  justify-content: space-around;
}
.loan_total_view {
  text-align: center;  
}
.loan_total_view view{
  color: #faa600;
  font-size: 20px;
  font-weight: 600;
  /* margin-bottom: 8px; */
  line-height: 22px;
}
.loan_total_view text{
  font-size: 12px;
  color: #222222;
}
.loan_total_view2 view{
  font-size: 22px;
}
.loan_total_view image{
  display: block;
  width: 24px;
  height: 24px;
  margin: auto;
  border-radius: 50%;
}
.loan_total_view3{
  padding-left:10px; 
}
.button_box{
  display: flex;
  justify-content: flex-end;
}
.myloanitembtn{
  display: inline-block;
  padding: 0 12px;
  height: 26px;
  line-height: 24px;
  text-align: center;
  border: 1px solid #b5b5b5;
  color: #b5b5b5;
  border-radius: 20px;
  background: #fff;
  font-size: 12px;
  margin: 10px 0 0 10px;
}
.paybtn{
  color: #ef9d00;
  border: 1px solid #ef9d00;
}