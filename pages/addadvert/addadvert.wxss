/* pages/addadvert/addadvert.wxss */
.addadvert_body{
  padding: 12px;
}
.messcard{
  width: 100%;
  /* height: 97px; */
  padding: 16px;
  margin-bottom: 20px;
  box-sizing: border-box;
  box-shadow: 0 4px 6px #e2e1e1;
  border-radius: 6px;
}
.messcard_top{
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.line{
  width: 8px;
  height: 2px;
  background: #f6a702;
  margin-right: 6px;
}
.messcard_top text{
  font-size: 16px;
  color: #000;
  font-weight: 600;
}
.priceinput{
  width: 136px;
  height: 32px;
  box-sizing: border-box;
  padding: 0 20px;
  border-radius: 20px;
  border: 0;
  outline: none;
  background: #f8f8f8;
  font-size: 14px;
  color: #f6a702;
}
.messcard_bot{
  display: flex;
}
.messcard_bot_title{
  font-size: 12px;
  color: #d0d0d0;
  padding: 0 12px;
  margin: 0 10px 12px 0;
  background: #f8f8f8;
  line-height: 25px;
  border-radius: 15px;
}
.messcard textarea{
  width: 100%;
  min-height: 100px;
  border-radius: 6px;
  background: #f8f8f8;
  font-size: 12px;
  padding: 12px 20px;
  box-sizing: border-box;
  color: #f6a702;
}
.addadvert_btn{
  width: 200px;
  height: 35px;
  border-radius: 20px;
  color: #fff;
  background: #f6a702;
  font-size: 14px;
  text-align: center;
  line-height: 35px;
  border: 0;
  outline: none;
  margin: 40px auto 70px;
}
.messcard_bot .active_title{
  background: #f6a702;
  color: #fff;
}
.addadvert_body .addbtn_active{
  background: #f6a702;
  color: #fff;
}